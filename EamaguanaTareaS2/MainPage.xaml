<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EamaguanaTareaS2.MainPage">

    <StackLayout>

        <Image Source="logo.png"/>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Tarea Semana 3" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Iniciar sesión" FontSize="Title" Padding="30,10,30,10" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
        <Entry x:Name="txtContrasena" Placeholder="Ingrese el contraseña" IsPassword="True"/>
        <Button x:Name="btnIniciarsesion" Text="Iniciar sesión" Clicked="btnIniciarsesion_Clicked"/>
 

    </StackLayout>

</ContentPage>
